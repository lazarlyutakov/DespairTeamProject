    //var PASSWORD = "Sb123456";
    var REMEMBERME = "true";

    var loginObject = {}
    loginObject.name = USERNAME;
    loginObject.password = PASSWORD;
    loginObject.rememberMe = REMEMBERME;

    var LoginApi = $.ajax({
        url: LOGIN_API,
        type: "POST",
        data: JSON.stringify(loginObject),
        dataType: "json",
        beforeSend: function (xhr) {
